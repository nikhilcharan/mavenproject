pipeline {
    agent any 
    tools {
        maven '3.6.3'
        jdk 'JAVA_HOME'
    }
    stages {
        stage('Checkout') { 
            steps {
                git credentialsId: 'nikhilcharan', url: 'https://github.com/nikhilcharan/maventestproject.git'
            }
        }  
        
        stage('read pom') { 
            steps {
                readpom = readMavenPom file: '' ;
            }
        }  
        
        stage('Build') {
             steps {
                   sh 'mvn clean install'
           }
        }
    }
  }
